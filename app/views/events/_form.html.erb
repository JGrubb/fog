<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <div class="items">
    <%= f.nested_fields_for :occurrences do |o| %>
      <fieldset class="item">
        <%= o.label :starts, "date" %>
        <%= o.text_field :starts, { :class => "event_date_field" } %>
        <%= link_to "Remove", "#", { :class => "remove" } %>
        <%= o.hidden_field :id %>
        <%= o.hidden_field :_destroy %>
      </fieldset>
    <% end %>
    </div>
    <%= link_to "Add date", "#", { :class => "add" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
