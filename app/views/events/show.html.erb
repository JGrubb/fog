<div id="main" class="round_8">

  <div class="page_title round_6">
    <h1><%= @event.title %></h1>
  </div>

  <p><%= pluralize @event.occurrences.count, "date" %></p>
  <ul>
  <% @event.occurrences.each do |occ| %>
    <li><%= occ.starts.strftime('%D') %>
  <% end %>
  </ul>


  <%= link_to 'Edit', edit_event_path(@event) if current_user %>
</div>
