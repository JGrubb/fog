<h1 class="replace"><%= @page.title %></h1>
<div class="post">
  <% if @page.images.count == 1 %>
  <div class="image">
    <%= image_tag @page.images.first.image.url(:medium), { :title => @page.images.first.caption, :class => "page-single" } %>
    <p class="caption"><%= @page.images.first.caption %></p>
  </div>
  <% end %>
  <%= dat_markdown(@page.body) %>
  <% if @page.images.count > 1 %>
    <div id="gallery">
      <% @page.images.each do |image| %>
        <%= link_to(image_tag(image.image.url(:thumb)), image.image.url(:large), { :title => image.caption, :class => "slideshow" }) unless image.id.blank? %>
      <% end %>
    </div>
  <% end %>
</div>
  <p id="notice"><%= notice %></p>
  <%= render "pages/admin" %>
