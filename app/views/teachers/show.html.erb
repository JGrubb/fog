<p id="notice"><%= notice %></p>
<div id="teacher-detail">
  <h3 class="page_title round_6 blue">
    <%= @teacher.name %>
  </h3>
  
  <div class="image col_445">
    <%= image_tag @teacher.image.image.url(:medium)%>
  </div>
  
  <div class="copy col_445">
    <%= dat_markdown(@teacher.bio) %>
  </div>
  
  <% if current_user %>
    <%= link_to 'Edit', edit_teacher_path(@teacher) %> |
    <%= link_to 'Back', teachers_path %>
  <% end %>
</div>